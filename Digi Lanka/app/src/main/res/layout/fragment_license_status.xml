<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Medical Appointment Section -->
        <TextView
            android:id="@+id/medicalAppointmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Appointment"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingTop="8dp"
            android:textColor="#2C3E50" />

        <TextView
            android:id="@+id/medicalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: -"
            android:padding="4dp"
            android:textColor="#7F8C8D"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDC3C7"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/writtenAppointmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Written Exam Appointment"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingTop="8dp"
            android:textColor="#2C3E50" />

        <TextView
            android:id="@+id/writtenStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: -"
            android:padding="4dp"
            android:textColor="#7F8C8D"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDC3C7"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/practicalAppointmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Practical Exam Appointment"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingTop="8dp"
            android:textColor="#2C3E50" />

        <TextView
            android:id="@+id/practicalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: -"
            android:padding="4dp"
            android:textColor="#7F8C8D"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>
